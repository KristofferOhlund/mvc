<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('build/images/four.png') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
        {% block stylesheets %}
            {% if app.request.pathinfo starts with '/adventure' %}
                {{ encore_entry_link_tags('adventure') }}
            {% else %}
                {{ encore_entry_link_tags('app') }}
            {% endif %}
        {% endblock %}

        {# {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %} #}
    </head>
    <body>
        <header class="site-header">
            {% if app.request.pathinfo starts with '/adventure' %}
            <nav class="navbar">
                <ul>
                    <li><a href="{{ path('init_adventure') }}"
                            class="{{ (app.request.pathinfo == path('init_adventure')) ? 'active' : '' }}">Adventure</a></li> |
                    <li><a href="{{ path('index_adventure') }}"
                            class="{{ (app.request.pathinfo == path('index_adventure')) ? 'active' : '' }}">Proj</a></li>
                </ul>
            </nav>
            {% else %}
            <nav class="navbar">
                <ul>
                    <li><a href="{{ path('home') }}" class="{{ (app.request.pathinfo == path('home')) ? 'active' : '' }}">Me</a></li> |
                    <li><a href="{{ path('about') }}" class="{{ (app.request.pathinfo == path('about')) ? 'active' : '' }}">About</a></li> |
                    <li><a href="{{ path('report') }}" class="{{ (app.request.pathinfo == path('report')) ? 'active' : '' }}">Report</a></li> |
                    {# <li><a href="{{ path('lucky') }}" class="{{ (app.request.pathinfo == path('lucky')) ? 'active' : '' }}">Lucky</a></li> | #}
                    <li><a href="{{ path('jsonRoutes') }}" class="{{ (app.request.pathinfo == path('jsonRoutes')) ? 'active' : '' }}">Api</a></li> |
                    <li><a href="{{ path('card') }}" class="{{ (app.request.pathinfo == path('card')) ? 'active' : '' }}">Card</a></li> |
                    <li><a href="{{ path('game_info') }}" class="{{ (app.request.pathinfo == path('game_info')) ? 'active' : '' }}">Game</a></li> |
                    <li><a href="{{ path('session_dump') }}" class="{{ (app.request.pathinfo == path('session_dump')) ? 'active' : '' }}">Reset Session</a></li> |
                    <li><a href="{{ path('library_index') }}" class="{{ (app.request.pathinfo == path('library_index')) ? 'active' : '' }}">Library</a></li> |
                    <li><a href="{{ path('index_metrics') }}" class="{{ (app.request.pathinfo == path('index_metrics')) ? 'active' : '' }}">Metrics</a></li> |
                    <li><a href="{{ path('init_adventure') }}" class="{{ (app.request.pathinfo == path('init_adventure')) ? 'active' : '' }}">Adventure</a></li> |
                    <li><a href="{{ path('index_adventure') }}" class="{{ (app.request.pathinfo == path('index_adventure')) ? 'active' : '' }}">Proj</a></li>
                </ul>
            </nav>
            {% endif %}
        </header>
        <main>
            {% block main %}
                {% block body %}{% endblock %}
            {% endblock %}
        </main>
        <footer>
            Copyright av mig &copy;
        </footer>
    </body>
    
</html>
