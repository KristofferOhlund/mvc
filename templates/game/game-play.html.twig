{% extends 'base.html.twig' %}

{% block title %}Playing{% endblock %}
{% block main %}

<article>
    <div class="game-layout">
        <a href=" {{ path('game_destroy') }}" class="button">Destroy game Session</a>
        <h1>We are now playing the game of 21</h1>
        {# <h2>Current player: {{ currentPlayer }}</h2> #}


        <section class="player1">
            <article>
                <h2>Current player: {{ player.getName() }}</h2>
                <h3>Cards</h3>
                    {% for card in player.showHand() %}
                        <span class="card {{ card.getCardColor() }}">{{ card.getSymbol() }}</span>
                    {% endfor %}
                <h3>Points</h3>
                {{ player.getPoints() }}
            </article>
        </section>

        <section class="buttons">
            <div class="button-container">
                <a href="{{ path('game_roll') }}" class="button blue-button" style="width:200px">Draw</a>
                <a href="{{ path('roll_stop') }}" class="button primary-button" style="width:200px">Stop</a>
            </div>
        </section>
    </div>
</article>

{% endblock %}

