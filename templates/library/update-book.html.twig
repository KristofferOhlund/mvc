{% extends 'base.html.twig' %}

{% block title %}Uppdatera bok{% endblock %}

{% block body %}
<article>

    {% include 'flash.html.twig' %}

    <h1>Uppdatera detaljer för bokid: {{ book.getId }}</h1>
    <form action="{{ path('update_book')}}" method="POST">
        <input type="hidden" name="book_id" value=" {{book.getId}} ">
        <label for="title">Titel</label>
        <input class="input book-input" type="text" name="title" id="title" value="{{ book.getTitle }}" required>
        <label for="isbn">ISBN</label>
        <input class="input book-input" type="text" name="isbn" id="isbn" value="{{ book.getIsbn }}" required>
        <label for="author">Författare</label>
        <input class="input book-input" type="text" name="author" id="author" value="{{ book.getAuthor }}" required>
        <label for="publisher">Publiserare</label>
        <input class="input book-input" type="text" name="publisher" id="publisher" value="{{ book.getPublisher }}" required>
        <label for="img_url">Bild url</label>
        <input class="input book-input" type="text" name="img_url" id="img_url" value="{{ book.getImgUrl }}">
        <button class="button blue-button" type="submit">Uppdatera bok</button>
    </form>
</article>
{% endblock %}