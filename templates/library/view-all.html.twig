{% extends 'base.html.twig' %}

{% block title %}Tillgängliga böcker{% endblock %}

{% block body %}
<article>
    <h2>Befintliga böcker</h2>
    <div class="flex-container">
        {% for bok in böcker %}
        <div class="bok">
            <a href=" {{ path('read_one', {num: bok.getId|e }) }} ">
                <img src="{{ asset('build/images/library/' ~ bok.getImgUrl) }}" alt="Bokens bild">
            </a>
            <p><strong>Title: </strong> {{ bok.getTitle }}</p>
            <p><strong>Author: </strong> {{ bok.getAuthor }}</p>
            <p><strong>Publisher: </strong> {{ bok.getPublisher }}</p>
            <p><strong>ISBN: </strong> {{ bok.getIsbn }}</p>
        </div>
        {% endfor %}
    </div>
</article>
{% endblock %}